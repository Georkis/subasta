{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container__login">
        <section class="screen">
            <div class="screen__content">
                <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Usted se ha autenticado {{ app.user.userIdentifier }}, <a
                                href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3">Por favor ingrese sus credenciales</h1>
                    <div class="mb-3">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="username@dominio.com"
                           autocomplete="email" required autofocus>
                    </div>
                    <div class="mb-3">
                    <input type="password" name="password" id="inputPassword" class="mb-3 form-control" placeholder="ContraseÃ±a"
                           autocomplete="current-password" required>
                    </div>

                    <div class="checkbox mb-3">
                        <label>
                            <input class="form-check-input" type="checkbox" name="_remember_me"> Recordarme
                        </label>
                    </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div>
                    <button class="btn btn-success" type="submit">
                        Entrar
                    </button>
                    <a class="btn btn-warning" href="{{ path('app_default') }}">Ir al sitio</a>
                </div>
            </form>
            </div>
        </section>
    </div>
{% endblock %}
